{{ 'split-image.css' |  asset_url |  stylesheet_tag}}
  
<div class="split-image-wrapper">
    {% for block in section.blocks %}
       
        <div class="split-image">
            <img src="{{ block.settings.split-image |  img_url: 'master'}}">
            <div class="button-wrapper">
            <a href="{{ block.settings.link }}" class="button button--primary">{{ block.settings.button-text }}</a>
        </div>
        </div>
        
       
    {% endfor %}
</div>

{% schema %}
{
    "name": "Split image ",
    "class": "split-image",
    "settings": [   ],
    "blocks": [
        {
            "name": "Split image",
            "type": "custom",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "split-image",
                    "label": "Split Image"
                },
                {
                    "type": "text",
                    "id": "button-text",
                    "label": "Button label"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Button label"
                }
            ]
            
        }
    ],
    "presets": [
        {
            "name": "Split image"
        }
    ]
}
{% endschema %}